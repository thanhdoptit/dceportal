# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dce_web
DB_USER=root
DB_PASS=secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info
LOG_FILE=C:\WebDCE\logs\backend.log
ERROR_LOG_FILE=C:\WebDCE\logs\backend-error.log

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://10.10.33.150

# File Upload
UPLOAD_DIR=C:\WebDCE\data\uploads
MAX_FILE_SIZE=10485760 # 10MB

# Security
SESSION_SECRET=your_session_secret
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
